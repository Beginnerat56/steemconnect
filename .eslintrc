//
{
  "extends": [
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
  },
  "plugins": [
  ],
  "rules": {
    "no-undef": ["error"],
    "no-const-assign": ["error"],
    "no-this-before-super": ["error"],
    "use-isnan": ["error"],

    "prefer-const": ["warn"],
    "no-var": ["warn"],
    "no-unused-vars": ["warn"],
    "no-unreachable": ["warn"],
    "no-shadow": ["warn"],
    "no-constant-condition": ["warn"],
  },
}
